# LLM Configuration (Ollama)
LLM_PROVIDER=ollama
OLLAMA_MODEL=llama3.2
# Alternative Ollama models you can try:
# OLLAMA_MODEL=llama3.1
# OLLAMA_MODEL=mistral
# OLLAMA_MODEL=codellama
# OLLAMA_MODEL=phi3

# Embedding Models (Ollama)
EMBEDDING_MODEL=nomic-embed-text
# Alternative embedding models:
# EMBEDDING_MODEL=mxbai-embed-large

# Reranker Model (still using sentence-transformers)
RERANKER_MODEL=BAAI/bge-reranker-base

# Database Configuration (PostgreSQL with pgvector)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=citetube
DB_USER=postgres
DB_PASSWORD=12345#your_actual_postgres_password

# Search Configuration
USE_RERANKER=true
TOP_K=8
VECTOR_TOP_K=30
BM25_TOP_K=30

# LLM Generation Settings
TEMPERATURE=0.1
MAX_TOKENS=1024

# Optional: Alternative LLM Providers (if you want to use APIs instead)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_api_key_here
# OPENAI_MODEL=gpt-4

# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229